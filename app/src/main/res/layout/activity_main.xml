<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Nome Completo -->
    <TextView
        android:id="@+id/nomeCompletoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/nomeCompletoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu nome completo"
        android:inputType="textPersonName" />

    <!-- E-mail -->
    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu e-mail"
        android:inputType="textEmailAddress" />

    <!-- Telefone -->
    <TextView
        android:id="@+id/telefoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/telefoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu telefone"
        android:inputType="phone" />

    <!-- Telefone Celular -->
    <TextView
        android:id="@+id/telefoneCelularLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone Celular"
        android:textSize="16sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/telefoneCelularEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira seu telefone celular"
        android:inputType="phone"
        android:visibility="gone" />

    <!-- Sexo -->
    <TextView
        android:id="@+id/sexoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/sexoRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/masculinoRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/femininoRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino" />
    </RadioGroup>

    <TextView
        android:id="@+id/dataNascimentoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento:"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefoneTv"
        />

    <EditText
        android:id="@+id/dataNascimentoEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="date"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dataNascimentoTv"
        app:layout_constraintTop_toBottomOf="@+id/dataNascimentoTv"
        android:hint="DD/MM/AA"/>

</LinearLayout>
